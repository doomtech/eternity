{
   artifacttype: Key;
}

artifact YellowCard
{
   artifacttype: Key;
}

artifact YellowSkull
{
   artifacttype: Key;
}

artifact BlueCard
{
   artifacttype: Key;
}

artifact BlueSkull
{
   artifacttype: Key;
}

